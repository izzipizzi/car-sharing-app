<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
        <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
        <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>

        <link rel="stylesheet" href="https://cdn.metroui.org.ua/v4/css/metro-all.min.css">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    </head>
    <body>

    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav ">
            {% set route = app.request.attributes.get('_route') %}
            <li class="nav-item "><a class="nav-link {{  route =='index' ? 'active' : '' }}" href="{{ path('home') }}">Home</a></li>
            <li class="nav-item "><a class="nav-link {{  route =='cars.list' ? 'active' : '' }}" href="{{ path('cars') }}">Cars</a></li>

            {% if not app.user %}
            <li class="nav-item"><a class="nav-link {{  route =='user_registration' ? 'active' : '' }} " href="{{ path('sign_up') }}">Sign up</a></li>
            <li class="nav-item"><a class="nav-link {{  route =='app_login' ? 'active' : '' }}" href="{{ path('login') }}">Login</a></li>
            {% endif %}
            {% if app.user %}
                <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Logout</a></li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item"><a class="nav-link {{  route =='loadPanel' ? 'active' : '' }}" href="{{ path('admin_panel') }}">Admin Panel</a></li>

            {% endif %}
        </ul>
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.metroui.org.ua/v4/js/metro.min.js"></script>
    </body>
</html>
